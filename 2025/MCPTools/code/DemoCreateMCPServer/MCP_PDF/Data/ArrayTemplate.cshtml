@using System.Text.Json;
@using System.Text.Json.Nodes
@inherits RazorBlade.PlainTextTemplate<MCP_PDF.Data.ArrayData>
@{
    
    var nr = Model.JsonArray.Length;
}
<table border="1">
    <thead>
        <tr>
            <th>Nr</th>        @foreach (var item in Model.Properties)
        {

            <th>@item</th>
           
        }
    </thead>
    <tbody>
        @for (int i = 0; i < nr; i++)
        {
            var jsonObject = Model.JsonArray[i];
            
            <tr>
                <td>@(i + 1)</td>
                @foreach (var item in Model.Properties)
                {
                    var value = jsonObject.GetProperty(item);
                    var jsonValue = GetJsonValue(value);
                    <td>@jsonValue</td>
                }
            </tr>
        }
   
</table>
Generated by https://github.com/ignatandrei/MCP_PDF
@functions{
    private object? GetJsonValue(JsonElement element)
    {
        var valueKind = element.ValueKind;
        return valueKind switch
        {
            JsonValueKind.String => element.GetString(),
            JsonValueKind.Number => element.GetDouble(),
            JsonValueKind.True => true,
            JsonValueKind.False => false,
            JsonValueKind.Null => null,
            JsonValueKind.Array => "not handled array",
            JsonValueKind.Object => "not handled object",
            _ => "not handled " + valueKind.ToString()
        };
    }
}